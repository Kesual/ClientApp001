<Window x:Class="De.HsFlensburg.ClientApp001.Ui.Desktop.NewClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:De.HsFlensburg.ClientApp001.Ui.Desktop"
        xmlns:viewModels="clr-namespace:De.HsFlensburg.ClientApp001.Logic.Ui.ViewModels;assembly=Logic.Ui"
        mc:Ignorable="d"
        Title="NewClientWindow" Height="250" Width="500">
    <Window.DataContext>
        <Binding Source="{StaticResource ViewModelLocator}"
                 Path="TheNewClientWindowViewModel"></Binding>
    </Window.DataContext>
    <Grid>
        <UniformGrid Grid.Column="0" Rows="3">
            <Label VerticalAlignment="Center" HorizontalAlignment="Right">Identifier</Label>
            <TextBox Text="{Binding Identifier}" VerticalAlignment="Center"></TextBox>
            <Label VerticalAlignment="Center" HorizontalAlignment="Right">Identifier</Label>
            <TextBox Text="{Binding Name}" VerticalAlignment="Center"></TextBox>
            <Button Command="{Binding AddClient}">Kunde erstellen</Button>
        </UniformGrid>
    </Grid>
</Window>
